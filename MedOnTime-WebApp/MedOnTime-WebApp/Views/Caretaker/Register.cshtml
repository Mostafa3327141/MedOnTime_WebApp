@model Caretaker
@{
    ViewData["Title"] = "MedOnTime Registration";
}

<section id="registerHeadingFlexRow">
    <img id="heartPlus" src="~/img/heartPlusIcon.ico" alt="Heart+ Icon" />
    <h2>Register</h2>
</section>
<section>
    <div class="alert-danger text-left" asp-validation-summary="All"></div>
    <form asp-action="Register" method="post">
        <input type="submit" value="Create Profile" />
        <!--Username field-->
        @if (!"".Equals(ViewBag.Message))
        {
    <div class="alert-danger">@ViewBag.Message</div>}
        <div class="registerField">
            <input class="form-control" required asp-for="Username" placeholder="Username" />
        </div>
        <!--First Name field-->
        <div class="registerField">
            <input class="form-control" required asp-for="FirstName" placeholder="First Name" />
        </div>
        <!--Last Name field-->
        <div class="registerField">
            <input class="form-control" required asp-for="LastName" placeholder="Last Name" />
        </div>
        <!--Phone number field-->
        <div class="registerField">
            <input class="form-control" required asp-for="PhoneNum" placeholder="Phone No." />
        </div>
        <!--Date of Birth field-->
        <div class="registerField">
            <input class="form-control" type="date" required placeholder="Date of Birth" />
        </div>
        <!--Email field-->
        <div class="registerField">
            <input class="form-control" type="email" required asp-for="Email" placeholder="Email" />
        </div>
        <!--Password field-->
        <div class="registerField">
            <input class="form-control" type="password" required asp-for="Password" placeholder="Password" />
        </div>
    </form>
</section>