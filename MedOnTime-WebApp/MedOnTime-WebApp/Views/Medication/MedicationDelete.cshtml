@model MedOnTime_WebApp.Models.Medication

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center">
    <table>
        <tr>
            <td class="text-danger">
                <h3>Confirm delete @Model.MedicationName?</h3>
            </td>
        </tr>
        <tr>
            <td>
                <form asp-action="MedicationDelete" method="post">
                    <input type="hidden" name="objID" value="@Model.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </td>
            <td>
                <form asp-action="MedicationDetails" method="get">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <input type="submit" value="No" class="btn btn-primary" />
                </form>
            </td>
        </tr>
    </table>
</div>
<div>
    <h1>Details</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Medication ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Medication Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicationName)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "MedicationEdit", new { Id = Model.Id }) |
    @Html.ActionLink("Back to list", "MedicationList")
</div>
