@model Patient

@{
    ViewData["Title"] = "Patient Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <h1>Details</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Patient ID
        </dt>
        <dd class="col-sm-10">
            @Model.PatientID
        </dd>
        <dt class="col-sm-2">
            Caretaker ID
        </dt>
        <dd class="col-sm-10">
            @Model.CaretakerID
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName, @Model.LastName
        </dd>
        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10">
            @Model.Age
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Model.PhoneNum
        </dd>
    </dl>
</div>
<div>
    <form asp-action="MedicationList" asp-controller="Medication" method="get">
        <input type="submit" value="See @Model.FirstName's medications" />
    </form>
    <form asp-action="MedicationForm" asp-controller="Medication" method="get">
        <input type="submit" value="Add new medication for @Model.FirstName" />
    </form>
</div>
