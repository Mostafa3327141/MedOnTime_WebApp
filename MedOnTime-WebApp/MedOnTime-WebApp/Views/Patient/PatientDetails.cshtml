@model Patient

@{
    ViewData["Title"] = "Patient Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <h1>Details</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Patient ID
        </dt>
        <dd class="col-sm-10">
            @Model.PatientID
        </dd>
        <dt class="col-sm-2">
            Caretaker ID
        </dt>
        <dd class="col-sm-10">
            @Model.CaretakerID
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName, @Model.LastName
        </dd>
        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10">
            @Model.Age
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Model.PhoneNum
        </dd>
    </dl>
</div>
<div>
    <table>
        <tbody>
            <tr>
                <td>
                    <form asp-action="MedicationList" asp-controller="Medication" method="get">
                        <input type="hidden" value="@Model.PatientID" name="patientID" />
                        <input type="submit" value="See @Model.FirstName's medications" />
                    </form>
                </td>
                <td>
                    <form asp-action="MedicationForm" asp-controller="Medication" method="get">
                        <input type="hidden" value="@Model.PatientID" name="patientID" />
                        <input type="hidden" id="medication-form-caretakerObjID" name="caretakerObjID" />
                        <input type="submit" value="Add new medication for @Model.FirstName" />
                    </form>
                </td>
                <td>
                    <form asp-action="PatientList" asp-controller="Patient" method="get">
                        <input type="hidden" id="patient-list-caretakerObjId" value="" name="caretakerObjID" />
                        <input type="submit" value="Back To Patient List" />
                    </form>
                </td>
                <td>
                    <form asp-action="PatientLog" asp-controller="Patient" method="get">
                        <input type="hidden" value="@Model.FirstName" name="patientFirstName" />
                        <input type="hidden" value="@Model.PatientID" name="Id" />
                        <input type="submit" value="Patient's medication history" />
                    </form>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<script>
    document.getElementById("patient-list-caretakerObjId").value = getCookie("Caretaker");
    document.getElementById("medication-form-caretakerObjID").value = getCookie("Caretaker");
</script>
