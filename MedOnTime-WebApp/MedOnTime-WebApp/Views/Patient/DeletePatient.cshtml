@model MedOnTime_WebApp.Models.Patient

@{ ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<div class="text-center">
    <table>
        <tr>
            <td class="text-danger">
                <h3>Confirm delete @Model.FirstName @Model.LastName?</h3>
            </td>
        </tr>
        <tr>
            <td>
                <form asp-action="DeletePatient" method="post">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </td>
            <td>
                <form asp-action="PatientDetails" method="get">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <input type="submit" value="No" class="btn btn-primary" />
                </form>
            </td>
        </tr>
    </table>
</div>
<div>
    <h1>Details</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Medication ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Patient Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "EditPatient", new { Id = Model.Id, caretakerID = Model.CaretakerID }) |
    <a id="patient-list-btn" href="">Back to List</a>
</div>
<script>
    var patientListBtn = document.getElementById("patient-list-btn");
    patientListBtn.href = "/Patient/PatientList?caretakerObjID=" + getCookie("Caretaker");
</script>
