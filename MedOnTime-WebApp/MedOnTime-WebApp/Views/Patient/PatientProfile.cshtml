@model Patient

@{ ViewData["Title"] = "Patient Profile";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<div>
    <h1>Details</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Medication ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Caretaker ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CaretakerID)
        </dd>
        <dt class="col-sm-2">
            Patient ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientID)
        </dd>
        <!-- To Continue adding properties-->
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "EditPatient", new { Id = Model.Id }) |
    @Html.ActionLink("Delete", "DeletePatient", new { Id = Model.Id }) |
    @Html.ActionLink("Back to list", "PatientList")
</div>
